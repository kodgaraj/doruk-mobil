{
  "expo": {
    "owner": "kodgaraj",
    "name": "Doruk",
    "slug": "doruk",
    "version": "1.0.3",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kodgaraj.doruk",
      "infoPlist": {
        "NSCameraUsageDescription": "Fotoğraf eklemek için kamera izni gereklidir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.kodgaraj.doruk",
      "permissions": [ "CAMERA", "WRITE_EXTERNAL_STORAGE", "CAMERA_ROLL" ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
